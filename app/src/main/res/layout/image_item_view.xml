<?xml version="1.0" encoding="utf-8"?>
<biz.ostw.android.gallery.imageview.ImageItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageItemCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/btn_star_big_on">

        <ImageView
            android:id="@+id/imageItemView_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/imageItemView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageItemView_imageView"
            android:text="TextView"
            android:textStyle="bold" />

    </RelativeLayout>

</biz.ostw.android.gallery.imageview.ImageItemView>